<Window x:Class="HesabuPOS_Installer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HesabuPOS_Installer"
        xmlns:converters="clr-namespace:HesabuPOS_Installer.Converters"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" Height="450" Width="800">

    <Window.Resources>
        <converters:BoolToColorConverter x:Key="BTCConverter"></converters:BoolToColorConverter>
    </Window.Resources>

    <Grid>

        
        
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <TextBlock Text="1. Check Database Connection" Margin="10,10,10,10" Foreground="{Binding IsDatabaseOnline, Converter={StaticResource BTCConverter}}"/>

            <TextBlock Text="2. Initialize Database" Margin="10,10,10,10" Foreground="{Binding IsDatabaseInitialized, Converter={StaticResource BTCConverter}}"/>

            <Button x:Name="btn_restart_process" Click="btn_restart_process_Click" Content="Restart" Margin="10,10,10,10"/>

        </StackPanel>


    </Grid>
</Window>
